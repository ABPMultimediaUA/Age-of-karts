{
    "version": "0.1.0",
    "command": "make",
    "isShellCommand": true,
    "args": [],
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [ 
       {
             "taskName": "make",
             "args": [],
             "isBuildCommand": true,
             "problemMatcher": {
                   "owner": "base",
                   "fileLocation": ["relative", "${workspaceRoot}"],
                   "pattern": {
                      "regexp": "^(.*):(\\d+):\\s+(warning|error|syntax error)[^:]*:\\s+(.*)$",
                      "file": 1,
                      "line": 2,
                      "severity": 3,
                      "message": 4
                   }
               }
       }
    ]
}